{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "noEmit": false,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "resolvePackageJsonExports": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "scripts",
    "**/*spec.ts",
    "prisma.config.ts"
  ]
}
